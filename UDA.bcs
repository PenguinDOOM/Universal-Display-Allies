#library "UDA"

#include "zcommon.h"
#include "bcsutils.bcs"
using BCSUtils;
#include "UDA.h"

Script "Players_Count" OPEN
{
	SetCVar("UDA_TID", UniqueTID());
	SyncVariable(GetCVar("UDA_TID"), ClientCount());
}

Script "Connect_Count" (int type, int arg1, int arg2) EVENT
{
	if(GAMEEVENT_PLAYERCONNECT == type)
		SyncVariable(GetCVar("UDA_TID"), ClientCount());
}

Script "Disconnect_Count" (int arg) DISCONNECT
{
	SyncVariable(GetCVar("UDA_TID"), ClientCount());
}

Script "Player_ID1" ENTER
{
	if(GameType() == GAME_TITLE_MAP || GetCVar("Terminator") || GetCVar("Possession") || GetCVar("Duel"))
		terminate;
	
	if(GetCVar("deathmatch") && !GetCVar("TeamPlay") || GetCVar("LastManStanding") && !GetCVar("TeamPlay"))
		terminate;
	
	Delay(GetCVar("UDA_SetTIDTics"));
	
	int PN = PlayerNumber();
	
	if(!PlayerInGame(PN))
		terminate;
	
	if(ActivatorTID() == 0)
		Thing_ChangeTID(0, UniqueTID());
}

Script "Player_ID2" RESPAWN
{
	if(GameType() == GAME_TITLE_MAP || GetCVar("Terminator") || GetCVar("Possession") || GetCVar("Duel"))
		terminate;
	
	if(GetCVar("deathmatch") && !GetCVar("TeamPlay") || GetCVar("LastManStanding") && !GetCVar("TeamPlay"))
		terminate;
	
	Delay(GetCVar("UDA_SetTIDTics"));
	
	int PN = PlayerNumber();
	
	if(!PlayerInGame(PN))
		terminate;
		
	if(ActivatorTID() == 0)
		Thing_ChangeTID(0, UniqueTID());
}

Script "Client_OPEN" OPEN CLIENTSIDE //The bot shouldn't be able to do this.
{
	if(!IsNetworkGame() && GameType() == GAME_SINGLE_PLAYER || !IsNetworkGame() && GameType() == GAME_NET_COOPERATIVE) //Detect multiplayer emulation
		terminate;
	ACS_NamedExecuteAlways("Player_HUD", 0, 0, 0, 0);
}

Script "Client_Enter" ENTER CLIENTSIDE
{
	Delay(GetCVar("UDA_SetTIDTics") + 5);
	
	if(PlayerIsBot(PlayerNumber()))
		terminate;
	
	ACS_NamedExecuteAlways("Player_HUD", 0, 0, 0, 0);
}

Script "Spectator_HUD" (int player) DISCONNECT
{
	if(PlayerIsSpectator(player))
	{
		NamedExecuteClientScript("Player_HUD", player, 0, 0, 0);
	}
	else if(!PlayerIsSpectator(player))
	{
		SyncVariable(GetCVar("UDA_TID"), ClientCount());
	}
}

Script "Player_HUD" CLIENTSIDE
{
	int PN;
	PN = ConsolePlayerNumber();
	
	if(!IsNetworkGame()) //Detect multiplayer emulation
		PN = PlayerNumber();
	if(PN == -1)
		PN = ConsolePlayerNumber();
		
	if(IsServerOnly() || PlayerIsBot(PlayerNumber()) || GetCVar("Terminator") || GetCVar("Possession") || GetCVar("Duel"))
		terminate;
	if(GetCVar("deathmatch") && !GetCVar("TeamPlay") || GetCVar("LastManStanding") && !GetCVar("TeamPlay"))
		terminate;
	bool autoscale, Spy, TeamPlay, distance, zdistance;
	fixed height;
	int i, Spypn, Spytid, temp, phealth;
	str fonts;
	int count = 0;
	
	if(GetCVar("TeamPlay") || GetCVar("TeamPossession") || GetCVar("TeamLMS") || GetCVar("CTF") || GetCVar("OneFlagCTF") || GetCVar("SkullTag") || GetCVar("TeamGame") || GetCVar("Domination"))
		TeamPlay = true;
	
	while(true)
	{
		Spytid = GetPlayerSpyTID(PN);
		Spypn = GetPlayerSpyPN(PN);
		count = 0;
		temp = GetSyncVar(GetCVar("UDA_TID"));
		
		if(SpyPN == -1)
			terminate;
			
		if(Spypn == PN)
			Spy = false;
		else
			Spy = true;
		
		autoscale = GetCVar("UDA_Distance_Scale");
		height = GetCVar("UDA_Height");
		distance = GetCVar("UDA_Distance");
		
		switch(GetCVar("UDA_Fonts"))
		{
			case 0:
				fonts = "CONFONT";
				break;
			case 1:
				fonts = "SMALLFONT";
				break;
			case 2:
				fonts = "SMALLFONT2";
				break;
			case 3:
				fonts = "BIGFONT";
				break;
			default:
				fonts = "SMALLFONT";
				break;
		}
		
		if(GetCVar("UDA_Enable"))
		{
			if(GetCVar("UDA_Name") == True)
			{
				for (i = 0; i < MAX_PLAYERS; i++)
				{
					if(count >= temp)
						break;
				
					if(PlayerIsConnected(i)) //Count the number of players and optimize the loop.
						count++;
					
					if(Spypn != i && PlayerInGame(i))
					{
						if(GameType() == GAME_SINGLE_PLAYER || GameType() == GAME_NET_COOPERATIVE)
						{
							SetActivatorToPlayer(i);
							phealth = GetActorProperty(0, APROP_Health);
							if(phealth > 0)
								IIIDHudMessageOnActor(PN, i, Spytid, Spy, fonts, -1, PlayerName(i), height, 1.0, autoscale, distance);
							else
								IIIDHudMessageOnActor(PN, i, Spytid, Spy, DEADFONT, -1, DEADMESSEAGE, height, 1.0, autoscale, distance);
						}
						else if(TeamPlay && GetPlayerTeam(PN) == GetPlayerTeam(i))
						{
							SetActivatorToPlayer(i);
							phealth = GetActorProperty(0, APROP_Health);
							if(phealth > 0)
								IIIDHudMessageOnActor(PN, i, Spytid, Spy, fonts, -1, PlayerName(i), height, 1.0, autoscale, distance);
							else
								IIIDHudMessageOnActor(PN, i, Spytid, Spy, DEADFONT, -1, DEADMESSEAGE, height, 1.0, autoscale, distance);
						}
						else if(TeamPlay && GetPlayerTeam(PN) != GetPlayerTeam(i))
						{
							continue;
						}
						else
						{ 
							terminate;
						}
					}
				}
			}
			else
			{
				for (i = 0; i < MAX_PLAYERS; i++)
				{
					if(count >= temp)
						break;
				
					if(PlayerIsConnected(i)) //Count the number of players and optimize the loop.
						count++;
						
					if(Spypn != i && PlayerInGame(i))
					{
						if(GameType() == GAME_SINGLE_PLAYER || GameType() == GAME_NET_COOPERATIVE)
						{
							SetActivatorToPlayer(i);
							phealth = GetActorProperty(0, APROP_Health);
							if(phealth > 0)
								IIIDHudMessageOnActor(PN, i, Spytid, Spy, fonts, ALLYMARK, "", height, 1.0, autoscale, distance);
							else
								IIIDHudMessageOnActor(PN, i, Spytid, Spy, fonts, DEADALLYMARK, "", height, 1.0, autoscale, distance);
						}
						else if(TeamPlay && GetPlayerTeam(PN) == GetPlayerTeam(i))
						{
							SetActivatorToPlayer(i);
							phealth = GetActorProperty(0, APROP_Health);
							if(phealth > 0)
								IIIDHudMessageOnActor(PN, i, Spytid, Spy, fonts, ALLYMARK, "", height, 1.0, autoscale, distance);
							else
								IIIDHudMessageOnActor(PN, i, Spytid, Spy, fonts, DEADALLYMARK, "", height, 1.0, autoscale, distance);
						}
						else if(TeamPlay && GetPlayerTeam(PN) != GetPlayerTeam(i))
						{
							continue;
						}
						else
						{
							terminate;
						}
					}
				}
			}
		}
		Delay(1);
	}
}
